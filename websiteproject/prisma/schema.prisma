// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Class {
  id           Int       @id @default(autoincrement())
  classNo      Int       @unique
  classTime    String
  classDays    Json
  status       String
  noOfStudents Int
  parentCourse Int
  students     Student[] @relation("StudentClasses")
  instructors  Instructor[] @relation("ClassInstructors")
  courses      Course[]  @relation("CourseClasses")
}






model Student {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  name      String
  classes   Class[]   @relation("StudentClasses")
}




model Instructor {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  name      String
  expArea   String
  classes   Class[]   @relation("ClassInstructors")
  courses   Course[]  @relation("InstructorCourses")
}



model Course {
  id           Int       @id @default(autoincrement())
  courseNo     Int       @unique
  name         String
  description  String
  category     String
  status       String
  prerequisites Json
  classes      Class[]   @relation("CourseClasses")
  instructors  Instructor[] @relation("InstructorCourses")
}



model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

